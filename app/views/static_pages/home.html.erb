<%
=begin%>
 <div class="container">
  <h2 class="text-center">Budget App</h2>
  <div id="homePage-carousel" class="carousel slide homePage-carousel" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <% @carousel_images.each_with_index do |img, index| %>
        <li data-target="#home-page-carousel" data-slide-to="<%= index %>" class="<%= index == 0 ? 'active' : '' %>"></li>
      <% end %>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner homePage-innerCarousel">
      <% @carousel_images.each_with_index do |img, index| %>
        <div class="item <%= index == 0 ? 'active' : '' %>">
          <%= image_tag("carousel/#{img.split('/').last}") %>
          <div class="carousel-caption">
            <h3>Let's Budget!</h3>
            <p>Sign Up or Login to Begin Budgeting!</p>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#homePage-carousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#homePage-carousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
<%
=end%>
