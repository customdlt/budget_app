<%= stylesheet_link_tag "custom" %>
<div class="container expense-editForm">
  <h1 class="text-center">Apply Payment to Expense</h1>
  <% provide(:title, 'Apply Payment to Expense') %>
  <div class="row text-center">
    <div class="col-md-6 col-md-offset-3">
      <div class="d-flex flex-column mb-3">
        <%= form_with(model: @expense, local: true) do |f| %>
          <div  class="amountPaid-form-label">
            <%= f.label :amount_paid, "Amount Paid" %>
          </div>
          <div class="amountPaid-form-field">
            <%= f.number_field :amount_paid, :step => 0.01, :value => 0.00 %>
          </div>
          <div class="form-submit-button">
            <%= f.submit "Apply Payment", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
